<%= form_for(@item) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :tag_list, "TAGS" %>
    <%= f.hidden_field :tag_list %>
  </div>
  <%= f.submit "Add to Collection", class: "btn btn-large btn-primary" %>
<% end %>


<%= s3_uploader_form do %>
  <%= file_field_tag :file, multiple: true %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
    <div class="progress"><div class="bar" style="width: 0%"></div></div>
    </div>
</script>
